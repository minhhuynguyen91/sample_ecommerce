<%= form_for product do |f| %>
  <div class="form-group">
    <label> Name </label>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label> Description </label>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label> Price </label>
    <%= f.text_field :price, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label> Product Code </label>
    <%= f.text_field :code, class: 'form-control' %>
  </div>    
  <div class="form-group">
    <label> Availability </label>
    <%= f.text_field :availability, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label> Category </label>
    <%= f.select(:category, options_for_select([['Fruits'], ['Vegetables'], ['Dishes']]), {}, {class: 'form-control'} ) %>
  </div>
  <div class="form-group">
    <label> Image link </label>
    <%= f.text_field :img_link, class: 'form-control' %>
  </div>
  <%= f.submit type, class: 'btn btn-primary' %>
<% end %>

<script type="text/javascript">
  var simplemde = new SimpleMDE({
    element: document.getElementById("product_description"),
    autofocus: true,
    autosave: {
      enabled: true,
      // uniqueId: "product_description",
      delay: 1000
    }
  });
</script>